---
import {Props} from "astro";
const {
    ...props
}: Props = Astro.props;
---
<div class="content-grid" {...props}>
    <slot />
</div>

<style>
    .content-grid {
        --padding-inline: 1rem;
        --content-max-width: var(--cruxy--style--global--content-size);

        display: grid;
        grid-template-columns:
            [full-width-start]
                minmax(var(--padding-inline), 1rem)
            [content-start]
                calc(100vw - (var(--padding-inline) * 2))
            [content-end]
                minmax(var(--padding-inline), 1rem)
            [full-width-end];
        background: red;
    }

    .content-grid > :global(*) {
        grid-column: content;
    }

    .content-grid > :global(.full-width) {
        grid-area: full-width;
    }

</style>