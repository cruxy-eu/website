---
import { Button, Cover } from "@cruxy/components";
import { Badge } from "@cruxy/components";

interface SkewedPanelProps {
    backgroundImage: string;
}

const { backgroundImage } = Astro.props as SkewedPanelProps;
---

<section class="relative min-h-screen w-full overflow-hidden">
    <Cover class="absolute inset-0 bg-cover bg-center" img={backgroundImage}>
        <div class="relative min-h-screen flex items-center px-8">
            <div
                class="max-w-2xl bg-card p-12 transform -skew-y-2 shadow-2xl border-l-8 border-primary"
            >
                <div class="transform skew-y-2">
                    <slot />
                </div>
            </div>
        </div>
    </Cover>
</section>
