---
interface Props {
  ordered?: boolean;
  class?: string;
}

const { ordered = false, class: className, ...attrs } = Astro.props;
const Tag = ordered ? 'ol' : 'ul';
---

<Tag class:list={["text-md text-muted-foreground list-disc list-outside max-w-4xl mx-auto pl-14 pr-4 leading-relaxed", className]} {...attrs}>
  <slot />
</Tag>
