---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {
    href?: string;
    variant?: "primary" | "secondary" | "outline" | "ghost";
    size?: "sm" | "md" | "lg";
    class?: string;
    icon?: any;
}

const {
    variant = "primary",
    size = "md",
    class: className,
    ...attrs
} = Astro.props;

const baseStyles =
    "inline-flex items-center justify-center font-medium rounded-lg transition-all duration-150 ease-in-out disabled:opacity-50 disabled:cursor-not-allowed";

const sizeClasses = {
    sm: "px-3 py-1.5 text-sm gap-1",
    md: "px-4 py-2 text-base gap-2",
    lg: "px-6 py-3 text-lg gap-2.5",
}[size];

const variantClasses = {
    primary:
        "bg-primary text-foreground shadow-md hover:bg-indigo-700 focus:ring-4 focus:ring-indigo-300",
    secondary:
        "bg-secondary text-foreground shadow-sm hover:bg-gray-200 focus:ring-4 focus:ring-gray-300 border border-gray-300",
    outline:
        "bg-transparent text-indigo-600 border border-indigo-600 hover:bg-indigo-50 focus:ring-4 focus:ring-indigo-300",
    ghost: "bg-transparent text-gray-700 hover:bg-gray-100 focus:ring-4 focus:ring-gray-300",
}[variant];
---

<button
    class:list={[baseStyles, sizeClasses, variantClasses, className]}
    type="button"
    {...attrs}
>
    <slot name="icon" />
    <slot />
</button>
