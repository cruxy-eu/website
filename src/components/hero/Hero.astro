---
import { Section } from '@cruxy/components';
import { Cover } from '@cruxy/components';
---

<div class="hero">
    <Section fit="cover">
        <slot />
    </Section>
</div>

<style>
    .hero {
        position: relative;
        overflow: hidden;
        font-size: 4rem;
        font-weight: 700;
        line-height: 1.1;
    }

    .hero::after {
        content: "";
        position: absolute;
        bottom: 50%;
        left: 50%;
        transform: translateX(-50%) rotate(-10deg);
        width: 250%;
        height: 100px;
        background: radial-gradient(ellipse 70% 150% at 50% 50%, rgba(255, 111, 97, 0.25) 0%, rgba(255, 111, 97, 0.1) 50%, rgba(132, 94, 194, 0.05) 80%, transparent 100%);
        filter: blur(60px);
        z-index: 2;
        pointer-events: none;
    }
</style>