---
import {Layout, LayoutProps} from '@cruxy/layouts';
import {Cover, Section} from '@cruxy/components';
import ecImg from '../assets/ec_full.webp';
import ServicesBar from "../components/landing/ServicesBar.astro";
const layout: LayoutProps = {
    header: {
        instantSticky: true
    }
}
---
<Layout {...layout}>
    <Cover img={ecImg}>
        <section>
            <p class="bubble left glass">
                Hello, we are Anne and Tom.
            </p>
            <p class="bubble right glass">
                We live and work remotely in our van.
            </p>
            </section>
    </Cover>

    <Cover img={ecImg}>
        <section>
            <p class="half left glass">
                We provide digital services to clients around the world, specializing in web development, design, and digital marketing.
            </p>
        </section>
    </Cover>
</Layout>

<style>
    section {
        --border-radius: 1rem;
        --smaller-border-radius: 0.25rem;

        width: 100%;

        display: grid;

        grid-template-columns:
            [grid-start]
                1rem
            [left]
                calc(50vw - 1rem)
            [middle]
                calc(50vw - 1rem)
            [right]
                1rem
            [grid-end]
    }

    p {
        font-size: 1.5rem;
        line-height: 1.5rem;
        margin-bottom: 1rem;
        text-wrap: pretty;
    }

    .bubble {
        width: fit-content;
        padding: 1rem;
        display: block;
        text-align: left;

        &.left {
            border-radius: 0 var(--smaller-border-radius) var(--border-radius) 0;
            grid-column: grid-start / right
        }

        &.right {
            border-radius: var(--smaller-border-radius) 0 0 var(--border-radius);
            grid-column: left / grid-end;
            align-self: start;
            justify-self: end;
        }
    }

    .half.left {
        margin-top: 1rem;
        grid-column: left / middle;
        align-self: center;
        transition: all 0.3s linear;
        padding: 1rem;

        @media (max-width: 70ch) {
            // blur what is behind
            backdrop-filter: blur(0.5rem);
            grid-column: left / right;
        }
    }

</style>