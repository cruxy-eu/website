---
import { Layout } from "@cruxy/layouts";
import { Icon } from 'astro-icon/components';
import {
  Cover,
  Spacer,
  HeaderConfig,
  Skewed,
  Badge,
  Button,
} from "@cruxy/components";
import {
  FreelanceRemoteDeveloper,
  Definition,
  Hero,
  Typewriter,
  Keyboard,
} from "@cruxy/components/landing";
const header: HeaderConfig = {
  instantSticky: true,
};

import ecImg from "../assets/ec_full.webp";
import Hashtag from "../components/landing/Hashtag.astro";

const offers = [
  "Full-Stack Development",
  "Cloud & DevOps",
  "Big Picture Thinking",
  "Technical Writing",
];
---

<Layout header={header}>
  <section class="bg-grid lines bg-side-fade">
    <Hero>
      <Spacer size="header" />
      <FreelanceRemoteDeveloper />
      <div class="items-left flex flex-col items-center">
        <div class="fade-up-2 flex flex-row gap-4 pt-8">
          <span class="static-prefix">we</span>
          <Typewriter words={["create", "craft", "code", "build", "design"]} />
        </div>
        <div class="fade-up-3 flex flex-row items-center justify-center gap-4">
          <span class="text-gradient pb-1">cruxy</span> things
        </div>
        <div class="fade-up-4 flex flex-row items-center justify-center gap-4">
          for you
        </div>
      </div>
      <Spacer />
    </Hero>
  </section>

  <section class="bg-opaque flex flex-col items-center justify-center py-20">
    <Definition />
  </section>

  <section class="flex flex-col bg-background font-mono space-y-8 p-8 text-foreground">
    <Hashtag title="Freelance" subtitle="We are available for hire!" />
    <Button variant="primary" class="inline-flex w-fit items-center">
      <Icon name="mdi:download" class="inline-block mr-2" />
      Download CV
    </Button>
  </section>
  <section class="bg-muted-background font-mono space-y-8 p-8 text-foreground">
    <Hashtag title="Remote" subtitle="Wherever you are located, we are available!" />
  </section>
  <section class="bg-background font-mono space-y-8 p-8 text-foreground">
    <Hashtag title="Developer" subtitle="Whether it is backend, frontend or platform engineering, we got you!" />
  </section>

  <section class="bg-muted-background font-mono space-y-8 p-8 text-foreground">
    <Hashtag title="Toolbox" subtitle="These are some of the things we specialize in." />
    <Keyboard keys={[
      { "key": "Java", href: "#"},
      { "key": "Rust", href: "#"},
      { "key": "Cloud", href: "#"},
      { "key": "Kafka", href: "#"},
    ]} />
  </section>

</Layout>
